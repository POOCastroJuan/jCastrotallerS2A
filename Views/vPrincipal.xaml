<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jCastrotallerS2A.Views.vPrincipal"
             Title="vPrincipal">
    <VerticalStackLayout
        Padding="20"
        Spacing="20">

        <Image Source="uisrael1.jpg"
               HeightRequest="185"
               Aspect="AspectFit"
               SemanticProperties.Description="dot net bot in a hovercraft number nine" />
        <Label 
            Text="Semana 2"
            FontSize="20"
            TextColor="Blue"
            VerticalOptions="Center"
            HorizontalOptions="Center" />

        <Border Stroke="Black">
            <Picker x:Name="pkPaises" Title="Países">
                <Picker.Items>
                    <x:String>Ecuador</x:String>
                    <x:String>Peru</x:String>
                    <x:String>Argentina</x:String>
                </Picker.Items>
            </Picker>
        </Border>

        <Button x:Name="btnSelect" Text="Ver selección" Clicked="btnSelect_Clicked_1"/>
    </VerticalStackLayout>
</ContentPage>